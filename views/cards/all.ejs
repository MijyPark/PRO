<style>
  body{
    width: 100%;
    height: 100vh;
    background-image: linear-gradient(rgba(0,0,0,0.75),rgba(0,0,0,0.75)), url('/images/allcards.jpg');
    background-position: center;
    background-size: cover;}

  
</style>  
<div class="memberDiv">
<img class="img" src="/images/Logo.png" alt="Logo">
<nav class="navbar">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/cards/new">UPLOAD</a></li>
          <li><a href="/">SEARCH</a></li>
          <li><a href="/logout">Log Out</a></li>
        </ul>
      </nav>
</div>


<div style="display: grid; grid-template: auto / 1fr 1fr; gap: 5px">
<% cards.forEach(card => { %>
<div style="border: 5px solid goldenrod">
  <h4><%=card.cardname %></h4>
  <img src="<%=card.image %>" alt="image">
  <a href="/cards/<%- card._id %>"><%= card.cardname %></a>
    <div>
      <a href="/cards/<%- card._id %>/update"><button>EDIT</button></a>

      <form method="POST" action="/cards/<%- card._id %>/delete">
      <button type="submit">DELETE</button>
      </form>
    </div>
  </div>
<% }) %>
